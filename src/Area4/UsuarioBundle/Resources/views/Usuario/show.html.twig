<h1>Usuario</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>                <td>{{ entity.id }}</td>        </tr>
        <tr>
            <th>Nickname</th>                <td>{{ entity.nickname }}</td>        </tr>
        <tr>
            <th>Password</th>                <td>{{ entity.password }}</td>        </tr>
        <tr>
            <th>Nombre</th>                <td>{{ entity.nombre }}</td>        </tr>
        <tr>
            <th>Roles</th>                <td>{{ entity.roles }}</td>        </tr>
        <tr>
            <th>Puntos</th>                <td>{{ entity.puntos }}</td>        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('usuario') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('usuario_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('usuario_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
